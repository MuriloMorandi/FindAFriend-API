{
    "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
    "vcs": {
        "enabled": false,
        "clientKind": "git",
        "useIgnoreFile": false
    },
    "files": {
        "ignoreUnknown": false
    },
    "formatter": {
        "enabled": true,
        "indentStyle": "space",
        "indentWidth": 2,
        "lineWidth": 80,
        o
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true,
            "correctness"
        }
    },
    "javascript": {
        "formatter": {
            "quoteStyle": "single",
            "semicolons": "always",
            "arrowParentheses": "asNeeded",
            "jsxQuoteStyle": "double",
            "trailingCommas": "es5",
            "bracketSameLine": true
        }
    }
}